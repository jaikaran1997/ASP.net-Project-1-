@model AssignmentAsp.Models.MachineLearningCompaniesFeedback

@{
    ViewData["Title"] = "Create";
}
<h2>Feedback on Machine Learning Companies</h2>
<hr />
<div class="row" style="margin-right:auto;">
    <div class="col-lg-11 col-md-11 col-sm-11">
        <form asp-action="Create" class="formpad">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PostDate" class="control-label"></label>
                <input asp-for="PostDate" class="form-control" type="datetime" readonly value="@DateTime.Now" />
                <span asp-validation-for="PostDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" readonly value="@User.Identity.Name" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopicTitle" class="control-label"></label>
                <input asp-for="TopicTitle" class="form-control"  placeholder="Enter a topic for your Feedback"/>
                <span asp-validation-for="TopicTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectCompany" class="control-label"></label>
                <select asp-for="SelectCompany" class="form-control">
                    <option value="" selected disabled>Select a Company</option>
                    <option value="IBM">IBM</option>
                    <option value="Amazon">Amazon</option>
                    <option value="Google">Google</option>
                    <option value="Microsoft">Microsoft</option>
                    <option value="Oracle">Oracle</option>
                    <option value="SAS">SAS</option>
                </select>
                <span asp-validation-for="SelectCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Like" class="control-label"></label>
                <input asp-for="Like" class="form-control" value="0" />
                <span asp-validation-for="Like" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MessageContent" class="control-label"></label>
                <textarea asp-for="MessageContent" class="form-control" rows="5"></textarea>
                <span asp-validation-for="MessageContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 
