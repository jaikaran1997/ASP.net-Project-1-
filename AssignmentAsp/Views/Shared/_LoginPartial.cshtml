@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right" id="hove" style="background-color:#eeeeee00">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" id="hove" style="background-color:#eeeeee00">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link" style="background-color:#eeeeee00; color:black;">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="navbar-nav navbar-right nav">
        <li><a asp-area="Identity" asp-page="/Account/Register" id="hove" style="background-color:#eeeeee00 ">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login" id="hove" style="background-color:#eeeeee00">Login</a></li>
    </ul>
}